{
  "$schema": "http://json.schemastore.org/template",
  "author": "YourName",
  "classifications": [ "Microservice" ],
  "identity": "Company.Microservice.Template",
  "name": "Microservice Template",
  "shortName": "microservice",
  "sourceName": "MicroserviceName",
  "preferNameDirectory": true,
  "symbols": {
    "solutionName": {
      "type": "parameter",
      "datatype": "string",
      "description": "The name or path of the solution file to add the microservice projects to",
      "replaces": "SolutionName",
      "defaultValue": ""
    }
  },
  "postActions": [
    {
      "actionId": "Microsoft.DotNet.Cli.Command",
      "args": {
        "executable": "dotnet",
        "args": "sln \"{{solutionName}}\" add Application/MicroserviceName.Application.csproj"
      }
    },
    {
      "actionId": "Microsoft.DotNet.Cli.Command",
      "args": {
        "executable": "dotnet",
        "args": "sln \"{{solutionName}}\" add Domain/MicroserviceName.Domain.csproj"
      }
    },
    {
      "actionId": "Microsoft.DotNet.Cli.Command",
      "args": {
        "executable": "dotnet",
        "args": "sln \"{{solutionName}}\" add Infrastructure/MicroserviceName.Infrastructure.csproj"
      }
    },
    {
      "actionId": "Microsoft.DotNet.Cli.Command",
      "args": {
        "executable": "dotnet",
        "args": "sln \"{{solutionName}}\" add IntegrationTests/MicroserviceName.IntegrationTests.csproj"
      }
    },
    {
      "actionId": "Microsoft.DotNet.Cli.Command",
      "args": {
        "executable": "dotnet",
        "args": "sln \"{{solutionName}}\" add Presentation/MicroserviceName.Presentation.csproj"
      }
    }
  ]
}
